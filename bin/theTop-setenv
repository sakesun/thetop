# usage
#    $ source theTop-setenv
#    or
#    $ . theTop-setenv

# set common environment variables
export THETOP_BIN="`cd \`dirname $BASH_ARGV\`; pwd`"
export THETOP_HOME="`cd $THETOP_BIN/..; pwd`"

# set PATH
if [ "$THETOP_PREV_PATH" == "" ]; then
    export THETOP_PREV_PATH=$PATH
    export PATH=$THETOP_BIN:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
fi

# set PYTHONPATH
if [ "$THETOP_PREV_PYTHONPATH" == "" ]; then
    export THETOP_PREV_PYTHONPATH=$PYTHONPATH
    export PYTHONPATH=$THETOP_HOME/src/python
fi
